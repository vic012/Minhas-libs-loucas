# coding=utf-8

# os níveis disponíveis para o jogo.
niveis = ['iniciante', 'amador', 'profissional']

# as frases de cada nível.
frase_nivel_iniciante = "Água __0__ pedra __1__ tanto __2__ até que __3__."
frase_nivel_amador = "Em __0__ de cego __1__ tem __2__ é __3__."
frase_nivel_profissional = "__0__ com __1__ fere, com __2__ será __3__."

# as lacunas a serem preenchidas pelo jogador
lacuna = ['__0__', '__1__', '__2__', '__3__']

# as respostas corretas de cada nível.
resposta_iniciante = ['mole', 'dura', 'bate', 'fura']
resposta_amador = ['terra', 'quem', 'olho', 'rei']
resposta_profissional = ['quem', 'ferro', 'ferro', 'ferido']

# as tentativas que o usuário terá para acertar a frase
tentativas = [6,4,2]

# nesse momento o jogador receberá as boas vindas!
print '-' * 40
print 'Olá, Seja bem-vindo ao jogo: MAD-LIBS!'
print '-' * 40

def inicia_o_jogo(pergunta, resposta):
    """

    """
    for answer in resposta:
        resposta_do_usuario = raw_input("Qual a palavra que complementa o espaço " + lacuna[resposta.index (answer)]).lower()
        while resposta_do_usuario != answer:
            resposta_do_usuario = raw_input('Resposta invalida, tente novamente, Qual a palavra que complementa o espaço ' + lacuna[resposta.index(answer)]).lower()
        pergunta = pergunta.replace(lacuna[resposta.index(answer)], resposta_do_usuario)
        print 'Muito bem você acertou, veja como está a frase'
        print pergunta
    print 'parabéns, você conseguiu'


def seleciona_nivel():
    """
    Esse método permite ao jogador escolher um nível de dificuldade
    assim que o jogo é iniciado.
    """
    nivel = raw_input("Escolha um nível: ( iniciante | amador | profissional):").lower()
    if nivel == niveis[0]:
        print 'Você precisa completar a frase para finalizar o seu jogo'
        print frase_nivel_iniciante
        return inicia_o_jogo(frase_nivel_iniciante, resposta_iniciante)
    elif nivel == niveis[1]:
        print 'Você precisa completar a frase para finalizar o seu jogo'
        print frase_nivel_amador
        return inicia_o_jogo(frase_nivel_amador, resposta_amador)
    elif nivel == niveis[2]:
        print 'Você precisa completar a frase para finalizar o seu jogo'
        print frase_nivel_profissional
        return inicia_o_jogo(frase_nivel_profissional, resposta_profissional)
    elif nivel != niveis[0] or niveis[1] or niveis[2]:
        print 'Insira um nível válido'
        return seleciona_nivel()

seleciona_nivel()
