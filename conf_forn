#Método que retira o número da NF das compras para serem pesquizados
numerosNotasfiscais = re.compile('([0-9]+)')



def compras(compras):
	for item in compras:
		resultado = re.search(numerosNotasfiscais, item)
		

compras(historicoCompras)
