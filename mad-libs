# coding=utf-8

# nesse momento o jogador receberá as boas vindas!
print '-' * 40
print 'Olá, Seja bem-vindo ao jogo: MAD-LIBS!'
print '-' * 40

# os níveis disponíveis para o jogo.
niveis = ['iniciante', 'amador', 'profissional']

# as frases de cada nível.
frase_nivel_iniciante = "Água __0__ pedra __1__ tanto __2__ até que __3__."
frase_nivel_amador = "Em __0__ de cego __1__ tem __2__ é __3__."
frase_nivel_profissional = "De __0__ e de __1__ todo __2__ tem um __3__."

# as lacunas a serem preenchidas pelo jogador
lacuna = ['__0__', '__1__', '__2__', '__3__']

# as respostas corretas de cada nível.
resposta_iniciante = ['mole', 'dura', 'bate', 'fura']
resposta_amador = ['terra', 'quem', 'olho', 'rei']
resposta_profissional = ['medico', 'louco', 'mundo', 'pouco']

# Lista das frases definidas por nível.
frases = [frase_nivel_iniciante, frase_nivel_amador, frase_nivel_profissional]

# Lista das respostas definidas por nível.
respostas = [resposta_iniciante, resposta_amador, resposta_profissional]

chances = [6, 4, 2]

resposta_do_usuario = []

tentativas_restantes = []

def resposta_iniciante():
	resposta_certa = respostas[0]
	tentativas = chances[0]
	while tentativas > len(tentativas_restantes):
		if resposta_do_usuario == resposta_certa:
			print 'parabéns'
			break
		else:
			while True:
				contagem = len(tentativas_restantes)
				tentativas = tentativas - contagem
				tentativas_restantes.append(tentativas)
				print 'Tente novamente, você ainda tem ' + str(tentativas) + ' chances.'
				return frase_iniciante()
				if tentativas == 0:
					break





def frase_iniciante():
	print frases[0]
	print 'Preencha as lacunas para completar o jogo'
	lacuna_um = raw_input('A palavra da ' +  str(lacuna[0]) + ' é?').lower()
	resposta_do_usuario.append(lacuna_um)
	lacuna_dois = raw_input('A palavra da ' +  str(lacuna[1]) + ' é?').lower()
	resposta_do_usuario.append(lacuna_dois)
	lacuna_tres = raw_input('A palavra da ' + str(lacuna[2]) + ' é?').lower()
	resposta_do_usuario.append(lacuna_tres)
	lacuna_quatro = raw_input('A palavra da ' + str(lacuna[3]) + ' é?').lower()
	resposta_do_usuario.append(lacuna_quatro)
	return resposta_iniciante()

def nivel_iniciante():
	frase_iniciante()
	

def nivel_amador():
	frase_amador()
	resposta_amador()
	chances_amador()

def nivel_profissional():
	frase_profissional()
	resposta_profissional()
	chances_profissional()

def escolha_nivel():
	nivel = raw_input('Para começar informe o nivel desejado (Iniciante / Amador / Profissional):').lower()
	while True:
		if nivel == niveis[0]:
			return nivel_iniciante()
			break
		elif nivel == niveis[1]:
			print nivel_amador()
			break
		elif nivel == niveis[2]:
			print nivel_profissional()
			break
		else:
			if nivel != niveis[0] or niveis[1] or niveis[2]:
				print 'Insira um nível válido'
				return escolha_nivel()

def inicia_jogo():
	escolha_nivel()

inicia_jogo()
